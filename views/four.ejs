            </tr>
            <tr>
                <td>
                    <table class="controller">
                        <tr>
                            <th><button onclick="doTurn(0)"></button></th>
                            <th><button onclick="doTurn(1)"></button></th>
                            <th><button onclick="doTurn(2)"></button></th>
                            <th><button onclick="doTurn(3)"></button></th>
