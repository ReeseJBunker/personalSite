<body>
    <h1 class="title">Four In a Row AI</h1>
    <div class ="background">
        <div class = "floor"></div>
        <div class = "wall-left"></div>
        <div class = "wall-right"></div>
        <div class = "ceiling"></div>
        <table class="board">
            <tr id="Score"></tr>
            <tr>
                <td>
